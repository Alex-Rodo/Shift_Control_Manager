{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": ["node", "jest"]
    },
    "include": ["src/**/*", "__tests__/**/*"]
}